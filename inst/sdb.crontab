PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# ---- [external db updates] ----

# ARGOS (every 3 hours)
0 */3       * * *  Rscript --default-packages=dup -e 'ARGOS.pipeline();'

# ARGOS2 (every hour)
